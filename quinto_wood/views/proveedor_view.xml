<odoo>
  <!-- Vista Formulario -->
  <record id="quinto_wood_proveedor_form_view" model="ir.ui.view">
    <field name="name">quinto_wood.proveedor.form</field>
    <field name="model">quinto_wood.proveedor</field>
    <field name="arch" type="xml">
      <form string="Proveedor">
        <sheet>
          <group>
            <field name="cif" string="CIF"/>
            <field name="nombre" string="Nombre"/>
            <field name="direccion" string="Dirección"/>
            <field name="telefono" string="Teléfono"/>
            <field name="logo" widget="image" string="Logo"/>
            <field name="producto_id">
              <tree editable="bottom">
                <field name="nombre" string="Nombre"/>
              </tree>
            </field>
          </group>
        </sheet>
      </form>
    </field>
  </record>

  <!-- Vista Árbol -->
  <record id="quinto_wood_proveedor_tree_view" model="ir.ui.view">
    <field name="name">quinto_wood.proveedor.tree</field>
    <field name="model">quinto_wood.proveedor</field>
    <field name="arch" type="xml">
      <tree string="Proveedores">
        <field name="nombre" string="Nombre"/>
        <field name="cif" string="CIF"/>
        <field name="telefono" string="Teléfono"/>
      </tree>
    </field>
  </record>

  <!-- Vista Búsqueda -->
  <record id="quinto_wood_proveedor_search_view" model="ir.ui.view">
    <field name="name">quinto_wood.proveedor.search</field>
    <field name="model">quinto_wood.proveedor</field>
    <field name="arch" type="xml">
      <search string="Buscar Proveedor">
        <field name="nombre" string="Nombre del Proveedor"/>
      </search>
    </field>
  </record>

  <!-- Acción para abrir la vista -->
  <record id="quinto_wood_proveedor_action" model="ir.actions.act_window">
    <field name="name">Proveedores</field>
    <field name="res_model">quinto_wood.proveedor</field>
    <field name="view_mode">tree,form</field>
    <field name="search_view_id" ref="quinto_wood_proveedor_search_view"/>
    <field name="help" type="html">
      <p class="o_view_nocontent_smiling_face">Crea el primer proveedor</p>
    </field>
  </record>
</odoo>
